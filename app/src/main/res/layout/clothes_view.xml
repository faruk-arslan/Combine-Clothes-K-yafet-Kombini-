<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clothes_view"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:minHeight="100dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp" >
        <ImageView
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:foreground="@drawable/foreground_xxdpi_circle"
            android:background="#F5F2E1"
            android:paddingTop="5dp"
            android:paddingBottom="5dp" />

        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/image"
            android:paddingLeft="20dp">

            <TextView
                android:id="@+id/tv_category"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:gravity="top"
                android:textSize="18sp"
                android:fontFamily="@font/rasa_medium"
                android:text="Category"/>

            <TextView
                android:id="@+id/tv_subcategory"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:textSize="16sp"
                android:layout_below="@id/tv_category"
                android:text="Subcategory"/>

            <ImageView
                android:id="@+id/image_color"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:foreground="@drawable/circle"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"/>

        </RelativeLayout>
    </LinearLayout>



</RelativeLayout>